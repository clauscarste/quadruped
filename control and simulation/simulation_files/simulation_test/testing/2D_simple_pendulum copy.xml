<!-- https://mujoco.readthedocs.io/en/latest/overview.html?highlight=hello.xml#examples -->
<mujoco>
  <option gravity = "0 0 -9.81" viscosity="1">
    <flag contact="enable" />
  </option >
   <worldbody>
      <light diffuse="0 0 0" pos="0 0 2" dir="0 0 -1"/>
      <geom type="plane" size="20.25 20.25 0.01" rgba="1 1 1 1"/>
      <body name="chassis1" pos="0 0 2.6" euler="90 0 90">
         <joint name="joint0" type="hinge" axis = "0 0 1" pos = "0 0 0.5"/>
         <geom type="cylinder" size="0.02 0.5" mass = "0" rgba="1 1 1 1"/>
         <geom type="box" size="0.1 0.2 0.1" pos = "0 0 -0.5" rgba="0 0 0.2 1" mass = "0.3"/>
       <body name="chassis2" pos="-0.5 0 -0.5" euler="0 90 0">
         <joint name="joint1" type="hinge" axis = "0 1 0" pos = "0 0 0.5"/>
         <geom type="cylinder" size="0.02 0.5" mass = "0" rgba="1 1 1 1"/>
         <geom type="box" size="0.1 0.2 0.1" pos = "0 0 -0.5" rgba="0 0 0.2 1" mass = "0.3"/>
             <body name="chassis3" pos="0 0 -1" euler="0 0 0">
         <joint name="joint2" type="hinge" axis = "0 1 0" pos = "0 0 0.5"/>
         <geom type="cylinder" size="0.02 0.5" mass = "0" rgba="1 1 1 1"/>
         <geom type="box" size="0.1 0.2 0.1" pos = "0 0 -0.5" rgba="0 0 0.2 1" mass = "0.3"/>
      </body>
       </body>
       </body>
   </worldbody>

   <actuator>
     <motor name="torque" joint="joint0"  gear="1" ctrllimited="true" ctrlrange="-100 100"/>
       <motor name="torque2" joint="joint1"  gear="1" ctrllimited="true" ctrlrange="-100 100"/>
       <motor name="torque3" joint="joint2"  gear="1" ctrllimited="true" ctrlrange="-100 100"/>

   </actuator>

</mujoco>
